<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itganhuo.app.dao.PermissionsDao">

	<cache/>

	<sql id="permissions_column_list">
		ID, PERMISSION, DESCRIPTION, ISAVAILABLE
	</sql>
	
	<resultMap id="permissions_result" type="Permissions">
		<id column="id" property="ID" jdbcType="VARCHAR" />
		<result column="permission" property="PERMISSION" jdbcType="VARCHAR" />
		<result column="description" property="DESCRIPTION" jdbcType="VARCHAR" />
		<result column="isAvailable" property="ISAVAILABLE" jdbcType="TINYINT" />
	</resultMap>
	
	<select id="loadById" resultMap="permissions_result" parameterType="java.lang.String">
		SELECT
		<include refid="permissions_column_list" />
		FROM T_PERMISSIONS
		WHERE ID = #{id}
	</select>
	
	<select id="getPermissionsList" resultMap="permissions_result" parameterType="Map">
		SELECT
		<include refid="permissions_column_list" />
		FROM T_PERMISSIONS
		<choose>
			<when test="paging != null and paging.sort != null and paging.order != null">
				ORDER BY ${paging.sort} ${paging.order}
			</when>
			<otherwise>
				ORDER BY ID DESC
			</otherwise>
		</choose>
		<if test="paging.page > 0 and paging.rows > 0">
			LIMIT #{paging.offrow}, #{paging.rows}
		</if>
	</select>
	
	<select id="countPermissionsList" resultType="int" parameterType="Map">
		SELECT
		count(1)
		FROM T_PERMISSIONS
	</select>

	<insert id="insert" parameterType="Permissions" useGeneratedKeys="true" keyProperty="ID">
		INSERT INTO T_PERMISSIONS
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="permission != null">PERMISSION,</if>
			<if test="description != null">DESCRIPTION,</if>
			<if test="isAvailable != null">ISAVAILABLE,</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="permission != null">#{permission},</if>
			<if test="description != null">#{description},</if>
			<if test="isAvailable != null">#{isAvailable},</if>
		</trim>
	</insert>
	
	<update id="updateInfo" parameterType="Permissions">
		UPDATE T_PERMISSIONS
		<set>
			<if test="permission != null">permission = #{permission},</if>
			<if test="description != null">description = #{description},</if>
			<if test="available != null">isAvailable = #{isAvailable}</if>
		</set>
		WHERE ID = #{id }
	</update>
	
	<delete id="delete" parameterType="java.lang.String">
		DELETE FROM T_PERMISSIONS WHERE ID = #{id}
	</delete>
</mapper>